import { supabase } from "../lib/supabaseClient";

const handleUpload = async (event) => {
  const file = event.target.files[0];

  if (!file) return;

  // Validar tipo y tamaÃ±o
  const validTypes = ["image/jpeg", "image/png", "image/webp"];
  if (!validTypes.includes(file.type)) {
    alert("Solo se permiten imÃ¡genes en formato JPG, PNG o WEBP");
    return;
  }

  if (file.size > 5 * 1024 * 1024) {
    alert("La imagen debe ser menor a 5MB");
    return;
  }

  // Generar nombre Ãºnico
  const fileName = `${crypto.randomUUID()}-${file.name}`;

  try {
    // Subir archivo
    const { error } = await supabase.storage
      .from("wedding-photos")
      .upload(`guest-uploads/${fileName}`, file);

    if (error) throw error;

    alert("Â¡Foto subida con Ã©xito! Gracias por compartir.");
    event.target.value = ""; // Resetear input
  } catch (error) {
    console.error("Error al subir:", error);
    alert(`OcurriÃ³ un error: ${error.message}`);
  }
};

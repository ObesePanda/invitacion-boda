---
// src/components/Gallery.astro
const photos = [
  "/images/novios.jpg",
  "/images/boda2.webp",
  "/images/boda3.webp",
];
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-12 bg-[#bdb1a8]">
  {
    photos.map((photo) => (
      <img
        src={photo}
        alt="Foto de la pareja"
        class="rounded-lg shadow-lg hover:scale-95 hover:duration-700 hover:ease-in-out transition-transform"
      />
    ))
  }
</div>

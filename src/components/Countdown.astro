<!-- Script del lado del cliente -->
<script>
  const weddingDate = new Date("2025-06-30T00:00:00");

  const updateCountdown = () => {
    const now = new Date();
    const diff = weddingDate - now;

    const daysT = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((diff / (1000 * 60)) % 60);
    const seconds = Math.floor((diff / 1000) % 60);

    // Actualizar --value y el texto (para accesibilidad)
    document.getElementById("days").textContent = daysT;

    const daysElement = document.getElementById("countdown-days");
    daysElement.style.setProperty("--value", daysT);
    daysElement.textContent = daysT;

    const hoursElement = document.getElementById("countdown-hours");
    hoursElement.style.setProperty("--value", hours);
    hoursElement.textContent = hours;

    const minutesElement = document.getElementById("countdown-minutes");
    minutesElement.style.setProperty("--value", minutes);
    minutesElement.textContent = minutes;

    const secondsElement = document.getElementById("countdown-seconds");
    secondsElement.style.setProperty("--value", seconds);
    secondsElement.textContent = seconds;
  };

  // Iniciar el contador
  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>

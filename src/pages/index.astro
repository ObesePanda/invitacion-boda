---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Countdown from "../components/Countdown.astro";
import Gallery from "../components/Gallery.astro";
import Calendar from "../../public/svg/Calendar.astro";
import Itinerario from "../components/Itinerario.astro";
import Navbar from "../components/Navbar.astro";
import Historia from "../components/Historia.astro";
import Hoteles from "../components/Hoteles.astro";
import DressCode from "../components/DressCode.astro";
import Regalo from "../components/Regalo.astro";
import Album from "../components/Album.astro";
import Footer from "../components/Footer.astro";
import MusicPlayer from "../components/MusicPlayer.astro";
import RSVPForm from "../components/RSVPForm.astro";
---

<Layout>
  <MusicPlayer client:load />
  <Navbar />
  <section
    class="relative h-screen flex items-end justify-center text-center text-black overflow-hidden"
  >
    <!-- Imagen de fondo con ajustes para móvil -->
    <div
      class="absolute inset-0 bg-[url('../images/novios.jpg')] bg-cover bg-center bg-no-repeat grayscale"
    >
    </div>

    <div
      class="relative w-[90%] max-w-3xl bg-black/30 text-white p-6 md:p-12 flex flex-col items-center justify-center
              backdrop-blur-xs rounded-tl-4xl rounded-tr-4xl"
    >
      <h1
        class="text-6xl md:text-9xl font-cursive mb-4 text-[#fd9e5a] [text-shadow:_0_2px_4px_rgb(73_39_3_/_1.0)]"
      >
        Ana & Luis
      </h1>

      <p
        class="text-2xl md:text-4xl p-4 border-t-2 border-b-2 font-[Montserrat] [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.5)]"
      >
        ¡Nos casamos!
      </p>
      <p
        class="flex items-center text-lg md:text-xl p-2 font-[Montserrat] [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.5)]"
      >
        <Calendar />
        15 de Octubre 2025
      </p>
    </div>
  </section>
  <section id="countdown">
    <Countdown />
  </section>

  <section>
    <Gallery />
  </section>

  <section id="itinerario" class="flex justify-center p-4 mt-8">
    <Itinerario />
  </section>

  <section id="historia" class="flex justify-center items-center mt-8">
    <Historia />
  </section>

  <section class="flex justify-center p-4 mt-8">
    <Hoteles />
  </section>
  <section id="vestimenta" class="flex justify-center p-4 mt-8 bg-[#bdb1a8]">
    <DressCode />
  </section>
  <section class="flex justify-center p-8 bg-[#505069] text-white">
    <Regalo />
  </section>
  <section class="flex justify-center p-4 bg-[#bdb1a8]">
    <Album />
  </section>

  <section
    id="confirmar"
    class="flex justify-center p-8 bg-[#222222] text-white"
  >
    <RSVPForm />
  </section>
  <section class="relative flex justify-center p-8 text-white">
    <div
      class="absolute inset-0 bg-[url('/images/novios.jpg')] bg-cover bg-center"
    >
    </div>
    <div class="absolute inset-0 bg-black/80"></div>
    <RSVPForm class="relative" />
  </section>
  <section class="flex justify-center p-8 bg-[#222222] text-white">
    <Footer />
  </section>
</Layout>
